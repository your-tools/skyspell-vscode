{
  "name": "skyspell-vscode",
  "displayName": "Skyspell",
  "description": "Skyspell extension for VS Code",
  "version": "1.0.4",
  "publisher": "your-tools",
  "repository": "https://github.com/your-tools/skyspell-vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "skyspell.enable",
        "title": "skyspell: Enable spell checking"
      },
      {
        "command": "skyspell.disable",
        "title": "skyspell: Disable spell checking"
      },
      {
        "command": "skyspell.undo",
        "title": "skyspell: Undo last operation"
      }
    ],
    "configuration": {
      "title": "Skyspell settings",
      "type": "object",
      "properties": {
        "skyspell.lang": {
          "type": "string",
          "default": "en",
          "description": "Language to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^22",
    "@types/vscode": "^1.100.0",
    "eslint": "^9.13.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
